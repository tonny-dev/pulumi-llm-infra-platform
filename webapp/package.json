{
  "name": "ai-code-review-platform",
  "version": "1.0.0",
  "description": "AI-powered code review assistant platform with LLM integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:worker\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:worker": "nodemon --exec ts-node src/workers/llm-processor.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:load": "k6 run tests/load/api-load-test.js",
    "test:llm": "jest --config jest.llm.config.js",
    "lint": "eslint src/**/*.ts --fix",
    "lint:client": "cd client && npm run lint",
    "docker:build": "docker build -t ai-code-review-platform .",
    "docker:run": "docker run -p 3000:3000 ai-code-review-platform",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "benchmark:llm": "ts-node scripts/benchmark-llm.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "apollo-server-express": "^3.12.0",
    "graphql": "^16.6.0",
    "socket.io": "^4.7.2",
    "redis": "^4.6.7",
    "bull": "^4.11.3",
    "knex": "^2.5.1",
    "pg": "^8.11.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "axios": "^1.4.0",
    "openai": "^4.0.0",
    "langchain": "^0.0.136",
    "@langchain/openai": "^0.0.14",
    "simple-git": "^3.19.1",
    "diff": "^5.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "@octokit/rest": "^20.0.1",
    "node-cron": "^3.0.2",
    "prom-client": "^14.2.0",
    "express-prometheus-middleware": "^1.2.0",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.0",
    "zod": "^3.21.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@types/multer": "^1.4.7",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "playwright": "^1.36.2",
    "@playwright/test": "^1.36.2",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "concurrently": "^8.2.0",
    "k6": "^0.45.0",
    "nock": "^13.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
